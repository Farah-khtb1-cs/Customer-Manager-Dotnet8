@page "/CustomersDisplay"
@model customer_manager.Pages.CustomersDisplayModel
@{
}

<form asp-page="/AddCustomer">
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Add New Customer</button>
    </div>
</form>

<br />
<h2><b>Customers</b></h2>
<br />

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Customer ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Company Name</th>
            <th>Date Added</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.FName</td>
                <td>@customer.LName</td>
                <td>@customer.Email</td>
                <td>@customer.Phone</td>
                <td>@customer.Address</td>
                <td>@customer.CompanyName</td>
                <td>@customer.CreatedAt.ToString("MM/dd/yyyy")</td>
                <td>
                    <a asp-page="/AddCustomer" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-page="/CustomerDetails" asp-route-id="@customer.CustomerId" class="btn btn-sm btn-info">View</a>
                    <form method="post" asp-page-handler="Delete" asp-route-id="@customer.CustomerId" style="display:inline;"
                          onsubmit="return confirm('Are you sure you want to delete this customer?');">
                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
